CreateFunction({
  name: "change_password",
  body: Query(Lambda(["oldPassword", "newPassword"], Let([{
    validPassword: Identify(CurrentIdentity(), Var("oldPassword"))
  }], If(Var("validPassword"), Update(CurrentIdentity(), {
    credentials: {
      password: Var("newPassword")
    }
  }), false)))),
  role: "server"
})